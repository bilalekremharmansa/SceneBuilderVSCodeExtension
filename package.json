{
    "name": "scenebuilderextension",
    "displayName": "SceneBuilder extension for Visual Studio Code",
    "description": "Open FXML files into SceneBuilder from VSCode",
    "version": "0.0.3",
    "publisher": "bilalekrem",
    "repository": "https://github.com/bilalekremharmansa/SceneBuilderVSCodeExtension",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.scenebuilder",
        "onCommand:extension.scenebuilder.changePath"
    ],
    "main": "./out/extension",
    "contributes": {   
        "configuration": {
            "title": "SceneBuilder for VSCode",
            "properties": {
                "sceneBuilder.path": {
                    "type": "string",
                    "scope": "application",
                    "description": "Executable SceneBuilder path"
                }
            }
        },
        "commands": [
            {
                "command": "extension.scenebuilder",
                "title": "Open in Scene Builder"
            },
            {
                "command": "extension.scenebuilder.changePath",
                "title": "Change SceneBuilder path"
            }
        ],
        "menus": {
            "commandPalette": [{
                "command": "extension.scenebuilder",
                "when" : "resourceExtname == .fxml"
            }],
            "explorer/context": [{
                "command": "extension.scenebuilder",
                "when" : "resourceExtname == .fxml"
            }],
            "editor/context": [{
                "command": "extension.scenebuilder",
                "when" : "resourceExtname == .fxml"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
